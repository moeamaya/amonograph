<% drawings.each do |drawing| %>
  <div class="gallery fadeInUp">
    <%= link_to(drawing) do %>
      <h5><%= drawing.title %>
        <% if drawing.user %>
          <span><%= drawing.user.username %></span>
        <% end %>
      </h5>
      <%= image_tag drawing.drawing_url.to_s %>
    <% end %>
    <div class="gallery-hover">
      <%= truncate(drawing.about, length: 140) %>
      <div class="gallery-hover-stats">
        <span><%= image_tag 'views.svg' %></span>
        <%= drawing.impressionist_count(:filter=>:ip_address) %>
      </div>
    </div>
  </div>
<% end %>